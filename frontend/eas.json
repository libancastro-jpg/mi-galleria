{
  "cli": {
    "version": ">= 5.0.0"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      }
    },
    "production": {
      "ios": {
        "distribution": "store",
        "autoIncrement": true
      },
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true
      }
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "TU_APPLE_ID@email.com",
        "ascAppId": "TU_APP_STORE_CONNECT_ID",
        "appleTeamId": "TU_TEAM_ID"
      },
      "android": {
        "track": "production",
        "releaseStatus": "completed"
      }
    }
  }
}
